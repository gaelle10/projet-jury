{% extends 'base.html.twig' %}
{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="">
    <h1>Tous nos produits</h1>

    <div class="row">
        {% for produit in produits %}
            <div class="col-3 mb-3">
                <div class="card" style="width: 18rem;">
                    <img src="{{ produit.photo }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.titre }}</h5>
                        <p class="card-text">{{ produit.prix }}  â‚¬</p>
                        {% if app.user %}
                            <form action="{{ path('app_panier_add', {id: produit.id}) }}" method="post" class="d-inline-block">
                                <button class="btn btn-primary d-flex justify-content-between align-items-center">
                                    Ajouter au panier &nbsp;
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-plus-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5v-.5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zM8.5 8a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V12a.5.5 0 0 0 1 0v-1.5H10a.5.5 0 0 0 0-1H8.5V8z"></path>
                                    </svg>
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
